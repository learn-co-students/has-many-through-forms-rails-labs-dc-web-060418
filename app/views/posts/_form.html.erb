<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <h3>Categories</h3>
        <%= f.label "Select a category" %>
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)%>
        <%= f.fields_for :categories do |cat| %>
            
            <%= cat.label :name %>
            <%= cat.text_field :name %>
        <% end %>
    <%= f.submit %>
<% end %>
